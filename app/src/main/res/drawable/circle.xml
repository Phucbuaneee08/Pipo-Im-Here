<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval"> <!-- Sử dụng "oval" để tạo hình tròn -->
            <solid android:color="#FFE6E6"></solid>
            <size android:width="50dp" android:height="50dp"/> <!-- Thiết lập kích thước hình tròn, có thể điều chỉnh theo ý muốn -->
            <stroke android:width="1dp" android:color="#FB737C"/>
        </shape>
    </item>
</selector>